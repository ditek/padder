{
  "manifest_version": 2,
  "name": "URL Padder",
  "version": "1.0",
  "description": "Pads the URL with a custom suffix",
  "icons": {
    "48": "icon-48.png"
  },
  "background": {
    "scripts": ["background.js"],
    "type": "module"
  },
  "browser_action": {
    "default_icon": {
      "48": "icon-48.png"
    },
    "default_title": "Open new tab",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "storage",
    "<all_urls>"
  ]
}